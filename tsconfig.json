{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "types": ["node", "@playwright/test"],
    "resolveJsonModule": true,

    "skipLibCheck": true
  },
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts",
    "playwright.config.ts"
  ]
}
